@{
    ViewBag.Title = "moveObject";
}

<h2>moveObject</h2>
<style>
    .shape {
    border-radius: 50px;
    width:58px;
    height:58px;
    border: 1px solid yellow;
    background-color : seagreen;
    cursor: move;
    }

</style>

<div id="shape1" class="shape">
</div>
<div id="shape2" class="shape">
</div>


@section scripts{
     <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.js"></script>
    <script src="~/Scripts/jquery.signalR-1.1.3.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->

    <script src="~/signalr/hubs"></script>
    
    <!--SignalR script to update the chat page and send messages.--> 
    <script>
        
        $(function () {
            var hub = $.connection.moveObject;

            $shape = $(".shape");


            // functions that are gonna be called by the client 



            // functions that the server gonna call


            hub.client.objectMoved = function (id, x, y) {

                $("#" + id + "").css({ left: x, top: y })
              //  $shape.css({left : x , top : y})
            };

            $.connection.hub.start().done(function () {
                $shape.draggable({
                    drag: function () {
                        hub.server.moveObject(this.id, this.offsetLeft, this.offsetTop || 0)
                    }
                })


            })
        })

    </script>
    }


